<h2>ENROL IN HOGWARTS</h2>

<div class="container">
  <form action="/new" method="POST">

    <div class="data-field">
      <label for="firstName">First Name:</label>
      <input type="text" name="first_name" id="firstName">
    </div>

    <div class="data-field">
      <label for="lastName">Surname:</label>
      <input type="text" name="last_name" id="lastName">
    </div>

    <div class="data-field">
      <label for="houseSelect">Choose House:</label>
      <select name="house_id" id="houseSelect">
        <option value="<% @house1 %>">Griffindor</option>
        <option value="<% @house2 %>">Slytherin</option>
        <option value="<% @house3 %>">Hufflepuff</option>
        <option value="<% @house4 %>">Ravenclaw</option>
      </select>
    </div>

    <div class="data-field">
      <label for="age">Age:</label>
      <input type="number" name="age" id="age">
    </div>

    <div class="container">
      <input type="submit" value="Enrol">
    </div>

</form>
</div>
